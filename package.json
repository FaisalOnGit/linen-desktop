{
  "name": "choralith-audio-explorer",
  "productName": "Choralith Audio Explorer",
  "version": "1.0.0",
  "main": "electron/main.js",
  "author": "Stefano Mercadante <stefmercadante@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "electron:build": "npm run build && electron-builder",
    "start": "electron ."
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^5.0.0",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "edge-js": "^24.0.4",
    "electron-edge-js": "^37.0.0",
    "music-metadata": "^7.14.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "build": {
    "appId": "com.stesproject.choralith",
    "productName": "Choralith Audio Explorer",
    "files": [
      "dist",
      "electron"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "asar": true,
    "win": {
      "icon": "assets/icons/icon.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.music",
      "target": "dmg"
    },
    "linux": {
      "icon": "assets/icons/png",
      "target": "AppImage",
      "category": "AudioVideo"
    },
    "extraResources": [
      {
        "from": "assets/icons",
        "to": "assets/icons"
      }
    ]
  }
}
